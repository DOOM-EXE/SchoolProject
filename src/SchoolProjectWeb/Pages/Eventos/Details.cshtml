@page
@model SchoolProjectWeb.Pages_Eventos.DetailsModel

@{
    ViewData["Title"] = "Detalles del Evento";
}

<h1 class="text-center display-4">Detalles del Evento</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg mb-4">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3 font-weight-bold">Nombre del Evento</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Evento.NombreEvento)
                        </dd>

                        <dt class="col-sm-3 font-weight-bold">Actividad</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Evento.Actividad.NombreActividad)
                        </dd>

                        <dt class="col-sm-3 font-weight-bold">Fecha</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Evento.Fecha)
                        </dd>

                        <dt class="col-sm-3 font-weight-bold">Lugar</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Evento.Lugar)
                        </dd>

                        <dt class="col-sm-3 font-weight-bold">Descripción</dt>
                        <dd class="col-sm-9" style="word-wrap: break-word; overflow-wrap: break-word;">
                            @Html.DisplayFor(model => model.Evento.Descripcion)
                        </dd>
                    </dl>

                    <div class="form-group mt-4">
                        <!-- Mostrar el botón "Editar" solo para Administradores -->
                        @if (User.IsInRole("Administrador"))
                        {
                            <a asp-page="./Edit" asp-route-id="@Model.Evento.Id" class="btn btn-warning btn-lg">Editar</a>
                        }

                        <a asp-page="./Index" class="btn btn-secondary btn-lg ml-3">Volver a la Lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
    }

    .card-body {
        padding: 30px;
    }

    .text-center {
        color: #2a2a2a;
        font-size: 2.5rem;
    }

    dt {
        font-size: 1.1rem;
        color: #495057;
    }

    dd {
        font-size: 1.1rem;
        color: #6c757d;
    }

    .btn {
        font-size: 1.1rem;
        padding: 12px 24px;
        border-radius: 25px;
        transition: all 0.3s ease;
    }

    .btn-warning:hover {
        background-color: #e0a800;
        border-color: #d39e00;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }

    .shadow-lg {
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .row dd {
        margin-bottom: 1rem;
    }

    .card-body dd {
        word-wrap: break-word;
        overflow-wrap: break-word;
    }
</style>
