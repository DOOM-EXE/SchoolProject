@page
@model SchoolProjectWeb.Pages_Eventos.EditModel

@{
    ViewData["Title"] = "Editar Evento";
}

<h1>Editar Evento</h1>
<hr />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Evento.Id" />

            <div class="form-group">
                <label asp-for="Evento.NombreEvento" class="control-label">Nombre del Evento</label>
                <input asp-for="Evento.NombreEvento" class="form-control" />
                <span asp-validation-for="Evento.NombreEvento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Evento.ActividadId" class="control-label">Actividad</label>
                <select asp-for="Evento.ActividadId" class="form-control" asp-items="ViewBag.ActividadId"></select>
                <span asp-validation-for="Evento.ActividadId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Evento.Fecha" class="control-label">Fecha</label>
                <input asp-for="Evento.Fecha" class="form-control" type="datetime-local" />
                <span asp-validation-for="Evento.Fecha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Evento.Lugar" class="control-label">Lugar</label>
                <input asp-for="Evento.Lugar" class="form-control" />
                <span asp-validation-for="Evento.Lugar" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Evento.Descripcion" class="control-label">Descripción</label>
                <textarea asp-for="Evento.Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Evento.Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary ml-2">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>
