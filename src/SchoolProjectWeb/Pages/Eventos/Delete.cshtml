@page
@model SchoolProjectWeb.Pages_Eventos.DeleteModel

@{
    ViewData["Title"] = "Eliminar Evento";
}

<h1 class="text-center display-4">Eliminar Evento</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg mb-4">
                <div class="card-body">
                    <p class="lead">¿Estás seguro de que quieres eliminar este evento?</p>

                    <dl class="row">
                        <dt class="col-sm-3 font-weight-bold">Nombre del Evento</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Evento.NombreEvento)
                        </dd>

                        <dt class="col-sm-3 font-weight-bold">Actividad</dt>
                        <dd class="col-sm-9">
                            @if (Model.Evento.Actividad != null)
                            {
                                @Html.DisplayFor(model => model.Evento.Actividad.NombreActividad)
                            }
                            else
                            {
                                <span>No disponible</span>
                            }
                        </dd>

                        <dt class="col-sm-3 font-weight-bold">Fecha</dt>
                        <dd class="col-sm-9">
                            @Model.Evento.Fecha.ToString("yyyy-MM-dd HH:mm")
                        </dd>


                        <dt class="col-sm-3 font-weight-bold">Lugar</dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Evento.Lugar)
                        </dd>

                        <dt class="col-sm-3 font-weight-bold">Descripción</dt>
                        <dd class="col-sm-9" style="word-wrap: break-word; overflow-wrap: break-word;">
                            @Html.DisplayFor(model => model.Evento.Descripcion)
                        </dd>
                    </dl>

                    <div class="form-group mt-4">
                        <form method="post" id="deleteForm">
                            <input type="hidden" asp-for="Evento.Id" />
                            <button type="button" class="btn btn-danger btn-lg" onclick="confirmDelete()">Eliminar</button>
                            <a asp-page="./Index" class="btn btn-secondary btn-lg ml-3">Volver a la Lista</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete() {
        if (confirm("¿Estás seguro de que quieres eliminar este evento?")) {
            document.getElementById('deleteForm').submit();
        }
    }
</script>

<style>
    .card {
        border-radius: 15px;
    }

    .card-body {
        padding: 30px;
    }

    .text-center {
        color: #2a2a2a;
        font-size: 2.5rem;
    }

    dt {
        font-size: 1.1rem;
        color: #495057;
    }

    dd {
        font-size: 1.1rem;
        color: #6c757d;
    }

    .btn {
        font-size: 1.1rem;
        padding: 12px 24px;
        border-radius: 25px;
        transition: all 0.3s ease;
    }

    .btn-danger:hover {
        background-color: #dc3545;
        border-color: #c82333;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }

    .shadow-lg {
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .row dd {
        margin-bottom: 1rem;
    }

    .card-body dd {
        word-wrap: break-word;
        overflow-wrap: break-word;
    }
</style>
