@page
@model SchoolProjectWeb.Pages.Estudiantes.EditModel

@{
    ViewData["Title"] = "Editar Estudiante";
}

<h1>Editar Estudiante</h1>
<hr />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <input type="hidden" asp-for="Estudiante.Id" />

            <div class="form-group">
                <label asp-for="Estudiante.Nombre" class="control-label">Nombre</label>
                <input asp-for="Estudiante.Nombre" class="form-control" maxlength="15" />
                <span asp-validation-for="Estudiante.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Estudiante.Apellido" class="control-label">Apellido</label>
                <input asp-for="Estudiante.Apellido" class="form-control" maxlength="15" />
                <span asp-validation-for="Estudiante.Apellido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Estudiante.Grado" class="control-label">Grado</label>
                <input asp-for="Estudiante.Grado" class="form-control" />
                <span asp-validation-for="Estudiante.Grado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Estudiante.FechaNacimiento" class="control-label">Fecha de Nacimiento</label>
                <input asp-for="Estudiante.FechaNacimiento" class="form-control" type="date" />
                <span asp-validation-for="Estudiante.FechaNacimiento" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary ml-2">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>
