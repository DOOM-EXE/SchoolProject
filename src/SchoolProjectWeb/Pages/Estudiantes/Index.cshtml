@page
@model SchoolProjectWeb.Pages.Estudiantes.IndexModel
@{
    ViewData["Title"] = "Estudiantes";
}

<h1>Estudiantes</h1>

<!-- Botón para crear un nuevo estudiante -->
<a asp-page="./Create" class="btn btn-primary mb-3">Crear Estudiante</a>

<!-- Tabla con listado de estudiantes -->
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Grado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Estudiantes)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Grado</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
