@page
@model SchoolProjectWeb.Pages_Actividades.EditModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Actividad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Actividad.Id" />
            <div class="form-group">
                
                <label asp-for="Actividad.NombreActividad" class="control-label"></label>
                <input asp-for="Actividad.NombreActividad" class="form-control" />
                <span asp-validation-for="Actividad.NombreActividad" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Actividad.Descripcion" class="control-label"></label>
                <input asp-for="Actividad.Descripcion" class="form-control" />
                <span asp-validation-for="Actividad.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Actividad.CupoMaximo" class="control-label"></label>
                <input asp-for="Actividad.CupoMaximo" class="form-control" />
                <span asp-validation-for="Actividad.CupoMaximo" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Actividad.ProfesorId" class="control-label"></label>
                <select asp-for="Actividad.ProfesorId" class="form-control" asp-items="ViewBag.ProfesorId"></select>
                <span asp-validation-for="Actividad.ProfesorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

</body>
</html>
